{
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "moduleDetection": "force",
        "resolveJsonModule": true,
        "allowJs": true,

        "strict": true,
        "noEmit": true,

        "rootDir": "src",
        "outDir": "dist",

        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,

        "removeComments": true,
        "noUncheckedIndexedAccess": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
